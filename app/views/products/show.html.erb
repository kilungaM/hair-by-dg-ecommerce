<div class="container mt-4">
  <%= link_to 'â† Back to Products', products_path, class: 'btn btn-outline-secondary mb-3' %>

  <div class="row">
    <div class="col-md-6">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: 'img-fluid rounded' %>
      <% else %>
        <div class="bg-light p-5 text-center rounded">
          <p class="text-muted">No image available</p>
        </div>
      <% end %>
    </div>

    <div class="col-md-6">
      <% if @product.on_sale %>
        <span class="badge bg-danger mb-2">ON SALE</span>
      <% end %>
      <h1><%= @product.name %></h1>
      <p class="text-muted"><%= @product.category.name %></p>
      <h3 class="text-primary">$<%= @product.price %></h3>
      <p class="mt-4"><%= @product.description %></p>
      <p><strong>In Stock:</strong> <%= @product.stock %> units</p>

      <%= button_to 'Add to Cart', add_to_cart_path(@product), method: :post, class: 'btn btn-primary btn-lg mt-3' %>
    </div>
  </div>
</div>