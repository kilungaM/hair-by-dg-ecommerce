<div class="container mt-4">
  <h1>Our Products</h1>

  <!-- Search and Filter Form -->
  <%= form_with url: products_path, method: :get, local: true, class: 'mb-4' do %>
    <div class="row">
      <div class="col-md-4">
        <%= text_field_tag :keyword, params[:keyword], placeholder: 'Search products...', class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), include_blank: 'All Categories', class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= select_tag :filter, options_for_select([['All Products', ''], ['On Sale', 'on_sale'], ['New (Last 3 Days)', 'new'], ['Recently Updated', 'recently_updated']], params[:filter]), class: 'form-control' %>
      </div>
      <div class="col-md-2">
        <%= submit_tag 'Search', class: 'btn btn-primary w-100' %>
      </div>
    </div>
  <% end %>

  <!-- Products Grid -->
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card product-card h-100">
          <div class="card-body">
            <% if product.on_sale %>
              <span class="badge bg-danger">ON SALE</span>
            <% end %>
            <h5 class="card-title"><%= product.name %></h5>
            <p class="text-muted small"><%= product.category.name %></p>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
            <p class="text-primary"><strong>$<%= product.price %></strong></p>
            <%= link_to 'View Details', product_path(product), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @products %>
  </div>
</div>