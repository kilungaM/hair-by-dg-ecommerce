<div class="container mt-5">
  <div class="jumbotron text-center bg-light p-5 rounded">
    <h1 class="display-4">Welcome to Hair by DG</h1>
    <p class="lead">Premium hair care products for natural hair</p>
    <%= link_to 'Shop Now', products_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <h2 class="mt-5 mb-4">Featured Products</h2>
  <div class="row">
    <% @featured_products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card product-card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= truncate(product.description, length: 100) %></p>
            <p class="text-primary"><strong>$<%= product.price %></strong></p>
            <%= link_to 'View Details', product_path(product), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>